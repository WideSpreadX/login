<style>

    .main-header-page-menu-container {
        background: rgba(135, 206, 250, 0.5);
        border-top: outset 2px #fff;
        border-bottom: outset 2px #fff;
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.6);
        margin-bottom: 20px;
    }

    .main-header-page-menu-inner {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        flex-wrap: wrap;
        align-items: center;
    }

    .main-header-page-menu-inner-item {
        min-width: 25%;
        margin-top: 5px;
    }
    .main-header-page-menu-inner-item a {
        text-align: center;
        text-decoration: none;
        color: #fff;
        padding: 5px;
        font-size: 1.3rem;
    }
    .show-search {
        background: rgba(255, 255, 255, 0.3);
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding-bottom: 0;
        padding-top: 10px;
        width: 100%;
        margin-bottom: 30px;
        border-radius: 0;
    }
    .show-search input {
        width: 100%;
        outline: none;
        border: none;
        padding: 5px;
        background: rgba(135, 206, 250, 0.5);
        color: #fff;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.75);
    }
    .show-search input::placeholder {
        color: #fff;
    }
    .show-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }

        .video-stream {
            width: 100%;
            max-width: 100vw;
            text-align: center;
            padding-top: 10px;
            margin-bottom: 20px;
        }
        .video-stream iframe {
           border-radius: 8px;
        }
        .show-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            min-height: 100%;
            z-index: -80;
        }
        .show-container {
        }
        .show-container h3 {
            text-align: center;
            padding: 10px;
        }
        .show-container p {
            color: #fff;
        }
        .show-image img {
            max-width: 100%;
            width: 100%;
            max-height: 100%;
            min-height: 100%;
        }
        .show-data {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            margin-bottom: 20px;
            border-top: outset 2px lightskyblue;
            border-bottom: outset 2px lightskyblue;
        }
        .show-data h3 {
            font-size: 1.3rem;
        }
        .show-data p {
            padding: 10px;
            text-align: justify;

        }
    
    </style>
    
    <div class="show-search">
        <form action="/entertainment/tv/search" method="POST">
            <input type="text" name="show" id="show" placeholder="Search for shows...">
            <button type="submit">Search</button>
        </form>
    </div>
    
    <div class="show-image">
        <img src="https://image.tmdb.org/t/p/w500<%= returnedData.still_path %>" alt="">
    </div>
    <div class="show-container">
        <div class="show-data">
            <h3> <%= returnedData.name %></h3>
            <p><%= returnedData.overview %></p>
        </div>
        <div class="video-stream">
            <iframe src="https://www.2embed.ru/embed/tmdb/tv?id=<%= showId %>&s=<%= returnedData.season_number %>&e=<%= returnedData.episode_number %>" frameborder="0" width="100%" allowfullscreen="true"></iframe>
        </div>
    </div>

    

