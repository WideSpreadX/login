    <style>
        @media (min-width: 299px) {
            body {
                background: #000;
                padding: 0;
                margin: 0;
                margin-top: 50px;
                padding-bottom: 70px;
            }
            .container {
                width: 100vw;
            }
            .widespread-header {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                width: 100vw;
                z-index: 9999;
                background: rgba(0, 0, 0, 0.15);
                backdrop-filter: blur(4px);
                border-bottom: outset 2px lightskyblue;
            }
            .logo {
                width: 100vw;
                background: rgba(255, 255, 255, 0.25);
                text-align: center;
            }
            .logo h1 {
                padding: 8px;
                width: 100%;
                font-size: 1.5rem;
            }
            .logo h1 a {
                color: #fff;
                text-decoration: none;
            }
            .spreadsearch {
                display: none;
            }
            .container {
                max-width: 100vw;
                overflow-x: hidden;
            }
        }
        @media (min-width: 768px) {

            .widespread-header {
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
                width: 100vw;
                height: 50px;
                box-shadow: 0 10px 10px rgba(0, 0, 0, 0.5);
            }
            .logo {
                width: 65%;
                height: 100%;
            }
            .spreadsearch {
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
                width: 35%;
                background: rgba(255, 255, 255, 0.25);
                height: 100%;
            }
            .spreadsearch input {
                width: 70%;
                padding: 3px;
                background: rgba(255, 255, 255, 0.5);
                backdrop-filter: blur(4px);
                outline: none;
                border: none;
                color: #000;
                border-radius: 0;
                border-top-left-radius: 4px;
                border-bottom-left-radius: 4px;
            }
            .spreadsearch input::placeholder {
                color: #000;
            }
            .spreadsearch button {
                width: 25%;
                outline: none;
                border: none;
                background: rgba(135, 206, 250, 0.5);
                padding: 3px;
                border-radius: 0;
                border-top-right-radius: 4px;
                border-bottom-right-radius: 4px;
            }
        }
        
        @media (min-width: 992px) {	
            .widespread-header {
                width: 85vw;
                margin-left: 15vw;
            }
        }
        @media (min-width: 1200px) {

            .container {
                width: 85%;
                margin-left: 15%;
            }
        }
    </style>
