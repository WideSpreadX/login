    <style>


@media screen and (max-width: 2699px) {

    .widespread-header {
        width: 85vw;
        height: 85px;
        margin-left: 0;
        position: fixed;
        top: 0px;
        left: 15vw;
    }
    .widespread-header .logo {
        top: 0;
        left: 0;
        width: 100%;
        padding: 8px;
        backdrop-filter: blur(2px);
    }
    .logo {
        width: 100%;
        border-radius: 0;
        box-shadow: 0 8px 8px 2px rgba(0, 0, 0, 0.5);
        position: absolute;
        top: 0;
        left: 0;
    }
    .logo h1 {
        color: rgba(255, 255, 255, 0.5);
    }
    .logo a {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.5);
        text-shadow: 0 0 1.5px rgba(126, 208, 247, 0.616);
    }
    .user-bar {
        display: block;
    }
   /* WideSpread Logo */
   .widespread-center-logo {
      position: fixed;
      bottom: 30px;
      right: 30px;
      width: 150px;
      height: 100px;
      z-index: -200;
    }
    .widespread-center-logo img {
        width: 100%;
        max-width: 100%;
        min-width: 100%;
        filter: drop-shadow( 0 0 15px  #000); 
    }
    .spreadsearch {
        position: absolute;
        right: 8px;
        top: 8px;
        width: 250px;
        z-index: 1000000;
    }
    .spreadsearch input {
        width: 100%;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
        border-top-right-radius: 8px;
        border: none;
        outline: none;
        border-top: groove 2px #000;
        padding: 5px;
    }
    .spreadsearch button {
        width: 30%;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
        border: none;
        outline: none;
        border-top: groove 1px transparent;
        border-bottom: groove 2px #333;
        padding: 5px;
        color: rgba(255, 255, 255, 0.5);
        text-shadow: 0 0 2px rgba(0, 128, 0, 0.75);
        margin-left: 70%;
        background: transparent;
        box-shadow: inset 0 -2px 10px rgba(0, 255, 0, 0.45), 0 0 3px rgba(0, 255, 0, 0.5);
        transition: ease-in 0.4s;
    }
    
    .spreadsearch button:hover {
        width: 30%;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
        border: none;
        outline: none;
        border-top: groove 1px rgba(0, 255, 0, 0.75);
        border-bottom: groove 2px #333;
        padding: 5px;
        color: rgba(255, 255, 255, 0.8);
        text-shadow: 0 0 2px rgba(0, 128, 0, 0.75);
        margin-left: 70%;
        background: rgba(255, 255, 255, 0.01);
        backdrop-filter: blur(2px);
        box-shadow: inset 0 -2px 4px rgba(0, 255, 0, 0.45), 0 0 7px rgba(0, 255, 0, 0.5);
        transition: ease-in 0.4s;
    }

    .container {
        width: 85vw;
        margin-left: 15vw;
    }
}


@media screen and (max-width: 1199px) {
    .widespread-header {
        width: 100vw;
        margin-left: 0;
        position: fixed;
        top: 0px;
        left: 0;
    }
    .logo {
        position: fixed;
        top: 0px;
        left: 0;
        width: 100vw;
        border-radius: 0;
    }
    .container {
        width: 100vw;
        margin-left: 0;
    }
    
}

@media screen and (max-width: 500px) {
    .spreadsearch {
        display: none;
    }
    .user-bar {
        display: none;
    }
   /* WideSpread Logo */
   .widespread-center-logo {
        position: fixed;
        bottom: 50px;
        left: 40px;
        width: 50px;
        height: 50px;
        z-index: 30;
    }
    .widespread-center-logo img {
        width: 100%;
        max-width: 100%;
        min-width: 100%;
        filter: drop-shadow( 0 0 15px  #000); 
    }
    .outerThumbContainer {
        position: fixed;
        bottom: 0px;
        right: 25px;
        width: 50px;
        height: 100px;
        border-radius: 50%;
    }
    .widespread-header {
        width: 100vw;
        height: 85px;
        margin-left: 0;
        position: fixed;
        top: 0px;
        left: 0;
    }
    .container {
        width: 100vw;
        margin-left: 0;
        padding-top: 100px;
    }
}

    </style>
</head>
<body>

    <div class="widespread-header">
        <div class="logo">
            <h1><a href="/dashboard" title="Go to your Dashboard">WideSpread</a></h1>
                    
            <!-- Search Bar -->
            <div class="spreadsearch">
                <form action="/search" method="post">
                <input type="search" name="query" id="spreadSearch" placeholder="Search...">
                <button type="submit">Search</button>
                </form>
            </div>  
        </div>        
    </div>

    
    <!-- Main SpreadMenu -->

    <div class="main-spread-menu-container">
        <%- include('./partials/mainSpreadMenu') %>
    </div>
  
  
    <!-- BODY -->

    <div class="container">
        <%- body %>
    </div>
   


    <!-- ThumbMenu -->

    <div class="outerThumbContainer">
        <%- include('partials/lowerThumbMenu') %>
    </div>
