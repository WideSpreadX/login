<body>

    <div class="widespread-header">
        <div class="logo">
            <h1><a href="/dashboard" title="Go to your Dashboard">WideSpread</a></h1>
        </div>        
                    
            <!-- Search Bar -->
        <div class="spreadsearch">
            <form action="/search" method="post">
            <input type="search" name="query" id="spreadSearch" placeholder="Search...">
            <button type="submit">Search</button>
            </form>
        </div>  
    </div>

    
    <!-- Main SpreadMenu -->

