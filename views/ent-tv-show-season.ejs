<style>
    .main-header-page-menu-container {
        background: rgba(135, 206, 250, 0.5);
        border-top: outset 2px #fff;
        border-bottom: outset 2px #fff;
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.6);
        margin-bottom: 20px;
    }

    .main-header-page-menu-inner {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        flex-wrap: wrap;
        align-items: center;
    }

    .main-header-page-menu-inner-item {
        min-width: 25%;
        margin-top: 5px;
    }
    .main-header-page-menu-inner-item a {
        text-align: center;
        text-decoration: none;
        color: #fff;
        padding: 5px;
        font-size: 1.3rem;
    }
    .show-search {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
        padding-bottom: 0;
        width: 100%;
        margin-bottom: 30px;
    }
    .show-search input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        outline: none;
        border: none;
        padding: 5px;
    }
    .show-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    h5 {
        text-align: center;
        color: #fff;
    }
    .show-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        min-height: 100%;
        z-index: -80;
    }
    .show-container h3 {
        text-align: center;
        padding: 10px;
    }
    .show-container p {
        color: #fff;
    }
    .show-image img {
        max-width: 100%;
        width: 100%;
        max-height: 100%;
        min-height: 100%;
    }
    .episodes-container h5 {
        font-size: 1.3rem;
        padding: 10px;
        margin-bottom: 15px;
    }
    .episodes {
        display: inline-flex;
        overflow-x: scroll;
        width: 90%;
        margin-left: 5%;
        height: 550px;
    }
    .episode {
        width: 300px;
        max-width: 300px;
        min-width: 300px;
        height: 300px;
        min-height: 300px;
        max-height: 300px;
        position: relative;
        border-radius: 8px;
        margin-right: 20px;
    }
    .episode a {
        text-decoration: none;
        font-size: 1.3rem;
    }
    .episode-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 300px;
        z-index: -25;
    }
    .episode-image img {
        width: 100%;
        height: 100%;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }
    .episode h5 {
        background: rgba(255, 255, 255, 0.3);
        border-bottom: groove 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        z-index: 10;
        padding: 5px;
        text-align: center;
        color: #fff;
        backdrop-filter: blur(2px);
    }

    .episode-overview {
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        position: absolute;
        top: 100%;
        max-height: 250px;
        overflow-y: auto;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
    }
    .episode-overview p {
        padding: 8px;
        text-align: justify;
        color: #fff;

    }
</style>

<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenu">
        <div class="main-header-page-menu-inner">
            <div class="main-header-page-menu-inner-item">
                <a href="/entertainment">Home</a>
            </div>
            <div class="main-header-page-menu-inner-item">
                <a href="/entertainment/movies">Movies</a>
            </div>
            <div class="main-header-page-menu-inner-item">
                <a href="/entertainment/tv">TV Shows</a>
            </div>
            <div class="main-header-page-menu-inner-item">
                <a href="/entertainment/music">Music</a>
            </div>
            <div class="main-header-page-menu-inner-item">
                <a href="/entertainment/podcasts">Podcasts</a>
            </div>
            <div class="main-header-page-menu-inner-item">
                <a href="/entertainment/audio-books">Audio Books</a>
            </div>
            <div class="main-header-page-menu-inner-item">
                <a href="/entertainment/sports">Sports</a>
            </div>

        </div>
    </div>
</div>

<div class="show-search">
    <form action="/entertainment/tv/search" method="POST">
        <input type="text" name="show" id="show" placeholder="Search for shows...">
        <button type="submit">Search</button>
    </form>
</div>

<div class="show-container">
    <div class="show-image">
        <img src="https://image.tmdb.org/t/p/w500<%= returnedData.poster_path %>" alt="">
    </div>

</div>

<div class="episodes-container">
    <h5>Episodes</h5>
    <div class="episodes">
        <% returnedData.episodes.forEach(function(episode) { %>
            <div class="episode">
            <a href="/entertainment/tv/<%= showId %>/<%= episode.season_number %>/<%= episode.episode_number %>">
                <div class="episode-image">
                    <img src="https://image.tmdb.org/t/p/w500<%= episode.still_path %>" alt="">
                </div>
                <h5><%= episode.name %></h5>
            </a>
            <div class="episode-overview">
                <p><%= episode.overview %></p>
            </div>
        </div>
        <% }) %>
    </div>
</div>
