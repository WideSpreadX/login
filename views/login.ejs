<!-- Main SpreadMenu -->

<div class="main-spread-menu-container">
  <%- include('./partials/mainSpreadMenu') %>
</div>



  <!-- Login Form -->

  <div class="login-form">   
    <%- include('./partials/messages') %>
    <form action="/users/login" method="POST">
      <div class="glass">
        <h5><i class="fas fa-sign-in-alt"></i>  Login</h5>
        <div class="spread-input">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="input-control login-input spread-input"
            placeholder="Enter your email"
            />
        </div>
        <div class="spread-input">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            />
        </div>
      </div>
      <button type="submit">Login</button>
    </form>
  </div>


  <!-- WideSpread Logo -->

  <div class="widespread-logo">
    <img src="/images/system/widespread_logo_1d.png" alt="WideSpread Logo">
  </div>
