<style>

    .show-search {
        background: rgba(255, 255, 255, 0.3);
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding-bottom: 0;
        padding-top: 10px;
        width: 100%;
        margin-bottom: 30px;
        border-radius: 0;
    }
    .show-search input {
        width: 100%;
        outline: none;
        border: none;
        padding: 5px;
        background: rgba(135, 206, 250, 0.5);
        color: #fff;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.75);
    }
    .show-search input::placeholder {
        color: #fff;
    }
    .show-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    .show-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        min-height: 100%;
        z-index: -80;
    }
    .show-container {
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        padding-top: 10px;
        padding-bottom: 10px;
        border-top: outset 2px lightskyblue;
        border-bottom: outset 2px lightskyblue;
    }
    .show-container h3 {
        text-align: center;
        padding: 10px;
        font-size: 1.5rem;
    }
    .show-container h6 {
        text-align: center;
        padding: 5px;
    }
    .show-container p {
        color: #fff;
        padding: 10px;
    }
    .show-image img {
        max-width: 100%;
        width: 100%;
        max-height: 100%;
        min-height: 100%;
    }
    .seasons-container {
        margin-top: 30px;
    }
    .seasons-container h5 {
        font-size: 1.3rem;
        padding: 8px;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        border-top: outset 2px lightskyblue;
        border-bottom: outset 2px lightskyblue;
    }
    .seasons {
        display: inline-flex;
        overflow-x: scroll;
        width: 90%;
        margin-left: 5%;
        margin-top: 15px;

    }
    .season {
        width: 200px;
        max-width: 200px;
        min-width: 200px;
        height: 300px;
        min-height: 300px;
        max-height: 300px;
        position: relative;
        border-radius: 8px;
        margin-right: 20px;
    }
    .season a {
        text-decoration: none;
    }

    .season-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -25;
    }
    .season-image img {
        width: 100%;
        height: 100%;
        border-radius: 8px;
    }
    .season p {
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(3px);
        border-bottom: outset 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        z-index: 10;
        padding: 5px;
        text-align: center;
        color: #fff;
    }
    .add-to-recommended {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 70vw
    }
    .add-to-recommended button {
        background: rgba(0, 128, 0, 0.3);
        border: none;
        outline: none;
        width: 95%;
        border-top-right-radius: 8px;
        border-top: groove 2px green;
        border-right: groove 2px green;
        color: #fff;
        padding: 10px;
    }
    .add-to-list {
        width: 100%;
        margin-bottom: 20px;
    }
    .add-to-list button {
        width: 100%;
        border: none;
        border-top: groove 2px green;
        border-bottom: groove 2px green;
        background: rgba(0, 128, 0, 0.3);
        color: #fff;
        outline: none;
        padding: 5px;
        font-size: 1.3rem;
    }
</style>

<div class="show-search">
    <form action="/entertainment/tv/search" method="POST">
        <input type="text" name="show" id="show" placeholder="Search for shows...">
        <button type="submit">Search</button>
    </form>
</div>

<div class="add-to-list">
    <form action="/entertainment/tv/save" method="post">
        <input type="text" name="link" value="<%= returnedData.id %>" hidden>
        <input type="text" name="poster" value="<%= returnedData.poster_path %>" hidden>
        <input type="text" name="name" value="<%= returnedData.name %>" hidden>
        <button type="submit">Add to Your List</button>
    </form>
</div>
<div class="show-image">
    <img src="https://image.tmdb.org/t/p/w500<%= returnedData.poster_path %>" alt="">
</div>
<div class="show-container">
    <div class="show-title">
        <h3> <%= returnedData.name %></h3>
    </div>
    <p><%= returnedData.overview %></p>
    <h6>Created By: <%= returnedData.created_by[0].name %></h6>
</div>


<div class="seasons-container">
    <h5>Seasons</h5>
    <div class="seasons">
        <% returnedData.seasons.forEach(function(season) { %>
            <div class="season">
                <a href="/entertainment/tv/<%= showId %>/<%= season.season_number %>">
                    <div class="season-image">
                        <img src="https://image.tmdb.org/t/p/w500<%= season.poster_path %>" alt="">
                    </div>
                    <p><%= season.name %></p>
                </a>
            </div>
            <% }) %>
    </div>
</div>



<div class="add-to-recommended">
    <form action="/entertainment/tv/add-to-recommended" method="post">
        <input type="text" name="name" value="<%= returnedData.name %>" hidden>
        <input type="text" name="link" value="<%= returnedData.id %>" hidden>
        <input type="text" name="poster" value="<%= returnedData.poster_path %>" hidden>
        <button type="submit">Add to WideSpread Collection</button>
    </form>
</div>
